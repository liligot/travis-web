{{#if this.account.hasSubscriptionPermissions}}
  <div class='flex flex--col flex--v-center flex--center'>
    <p class='subscribe-message'>
      <span data-test-subscribe-message='true'>
        Choose a plan before you run out of free builds.
      </span>
    </p>
    <SvgImage @name='icon-arrow-down' @class='icon-get-plan' />
  </div>
  {{#if this.isStepOne}}
    <BillingSelectPlan
      @displayedPlans={{this.displayedPlans}}
      @selectedPlan={{this.selectedPlan}}
      @showMonthly={{this.showMonthly}}
      @showAnnual={{this.showAnnual}}
      @next={{action 'next'}}
    />
  {{else if this.isStepTwo}}
    <BillingInformation
      @displayedPlans={{this.displayedPlans}}
      @selectedPlan={{this.selectedPlan}}
      @newSubscription={{this.newSubscription}}
      @billingInfo={{this.billingInfo}}
      @showAnnual={{this.showAnnual}}
      @scrollSection={{this.scrollSection}}
      @next={{action 'next'}}
      @back={{action 'back'}}
      @goToFirstStep={{action 'goToFirstStep'}}
    />
  {{else if this.isStepThree}}
    <BillingPayment
      @selectedPlan={{this.selectedPlan}}
      @showAnnual={{this.showAnnual}}
      @newSubscription={{this.newSubscription}}
      @isSavingSubscription={{this.isSavingSubscription}}
      @account={{this.account}}
      @goToFirstStep={{action 'goToFirstStep'}}
      @back={{action 'back'}}
    />
  {{/if}}
{{else}}
  <p data-test-no-permission-message>
    You do not have permission to create a subscription
  </p>
{{/if}}