<div class="initial-billing-view">
  <div class="flex">
    <div class="get-started">
      {{#if trial.hasActiveTrial}}
        <p class="">
          You've got {{pluralize trial.buildsRemaining 'trial build'}} left.<br />
          Start building or <a data-test-trial-link href={{config-get 'urls.gettingStarted'}} target="_blank"
            class="billing-section-link">checkout our docs for more info.</a>.
        </p>
        <p class="get-started__start-trial">
          Start your trial to get 100 free builds and 2 concurrent jobs for both public and private projects.
        </p>
      {{else}}
        <p class="get-started__builds">
          100 free builds to get you started
        </p>
        <p class="get-started__start-trial">
          Start your trial to get 100 free builds and 2 concurrent jobs for both public and private projects.
        </p>
      {{/if}}
    </div>
    <div class="icon-wrapper flex flex--v-center">
      {{svg-jar "icon-plus" class="icon icon-wrapper__plus"}}
    </div>
    <div class="flex billing-trial-info">
      <div class="billing-trial-info__box">
        <p class="billing-trial-info__box--open-source">We &lt;3 open source.</p>
        <p class="billing-trial-info__box--jobs">
          3 concurrent jobs for your open source projects are always free.
        </p>
      </div>
    </div>
  </div>
  <button class='button--blue activate-button {{if (not account.hasSubscriptionPermissions) 'disabled'}}'>
    Activate trial
  </button>
  <hr />
</div>